@page
@model InchirieriBiciclete.Pages.Clienti.CreateModel

<h2>Adauga Client</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Client.Nume">Nume</label>
        <input asp-for="Client.Nume" class="form-control" required />
        <span asp-validation-for="Client.Nume" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Client.Email">Email</label>
        <input asp-for="Client.Email" class="form-control" required />
        <span asp-validation-for="Client.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Client.Telefon">Telefon</label>
        <input asp-for="Client.Telefon" class="form-control" required />
        <span asp-validation-for="Client.Telefon" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Adauga Client</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
